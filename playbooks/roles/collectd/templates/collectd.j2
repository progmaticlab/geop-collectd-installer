Hostname "{{ ansible_hostname }} {{ vm_id }} {{ tenant_id }}"
FQDNLookup false
BaseDir "/var/lib/collectd"
PluginDir "/usr/lib/collectd"
TypesDB "/usr/share/collectd/types.db"
Interval 60

LoadPlugin logfile
LoadPlugin syslog
LoadPlugin network

LoadPlugin python
<Plugin python>
    ModulePath "/opt/collectd_plugins"
    Import "vm_cpu"
    <Module vm_cpu>
        Path "/proc/stat" 
    </Module>
    Import "vm_mem"
    <Module vm_mem>
        Path "/proc/meminfo"
    </Module>
    Import "vm_disk"
    <Module vm_disk>
        Path "/proc/mounts"
    </Module>
</Plugin>

<Plugin logfile>
    LogLevel "info"
        File "/var/log/collectd.log"
        Timestamp true
</Plugin>
<Plugin syslog>
    LogLevel info
</Plugin>
<Plugin network>
        Server {{ telegraf_server }} {{ telegraf_server_port }}
</Plugin>

<Include "/etc/collectd/collectd.conf.d">
	Filter "*.conf"
</Include>

